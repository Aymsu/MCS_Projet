<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.paulsab.aymer.mcs.StartActivity"
    android:background="@color/Blue">


    <Button
        android:text="Commencer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAide"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:id="@+id/buttonCommencer"
        android:onClick="goRecoVocale" />

    <Button
        android:text="Aide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAide"
        android:layout_marginBottom="52dp"
        android:onClick="launchAide"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/buttonCommencer"
        android:layout_alignStart="@+id/buttonCommencer" />

    <WebView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gifWebView"
        android:backgroundTint="@color/Blue"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="false"
        android:layout_above="@+id/buttonCommencer" />

    <TextView
        android:text="Jumping Sumo 8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/titreView"
        android:layout_centerInParent="true"
        android:textSize="50sp"
        android:textAlignment="center"
        android:fontFamily="casual" />

    <Button
        android:text="Test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="goTest"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
